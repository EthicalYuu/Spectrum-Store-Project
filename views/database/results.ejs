        <link rel="stylesheet" href="/ProductSheet.css">
        <link rel="stylesheet" href="/ProductSheet.css">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/resultsSheet.css">
        <title>search results</title>
</head>

<body>
    <%- include('../partials/nav.ejs') %>
        <div class="container">

            <div class="flex-child results-container">

                <!-- <div onclick="location.href='/product/';" class=" product ">
                <img src="https://citycenter.jo/image/cache/catalog/12020/82020/OMN-1200x1200.png " alt=" " style="width: 100%; max-height: 30vh; border-bottom: black solid 1px; ">
                <p class="product-name ">
                </p>
                <div class="box ">
                    <p class="in-stock ">In Stock</p>
                </div>
                <p class="price-tag ">0.00 JD</p>
            </div> -->

                <%for(let index = 0 ; index < searchResults.length ; index++){%>
                    <div onclick="location.href='/product/<%=searchResults[index].id%>';" class=" product ">
                        <%if(searchResults[index].image){%>
                            <img src="../../uploads/images/<%=searchResults[index].image%>" alt=" " style="width: 100%; height: 100%; max-height: 25.4vh;">
                            <%} else {%>
                                <img src="../../uploads/images/no_image.jpg" alt=" " style="width: 100%; height: 100%; max-height: 25.4vh;">
                                <%}%>
                                    <p class="product-name ">
                                        <%=searchResults[index].product%>
                                    </p>
                                    <% if(searchResults[index].qty !== 0 && searchResults[index].qty) {%>
                                        <div class="in-box ">
                                            <p class="in-stock ">In Stock</p>
                                        </div>
                                        <% } else {%>
                                            <div class="out-box ">
                                                <p class="out-stock ">Out Of Stock</p>
                                            </div>
                                            <% } %>
                                                <p class="price-tag ">
                                                    <%if(searchResults[index].isDiscount){%>
                                                        <%let newPrice = (searchResults[index].price * searchResults[index].discount) / 100%>
                                                            <s><%=searchResults[index].price.toFixed(2)%></s>
                                                            <%=newPrice.toFixed(2)%> JD
                                                                <%} else {%>
                                                                    <%=searchResults[index].price.toFixed(2)%> JD
                                                                        <%}%>
                                                </p>
                    </div>
                    <%}%>



            </div>

        </div>

        <%- include('../partials/footer.ejs') %>

            <%- include('../partials/javacode.ejs') %>
</body>

</html>